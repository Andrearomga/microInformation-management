{
  "compilerOptions": {
    // "target": "ES2020",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",      
    "lib": ["ESNext"],      
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,      
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
